extends layout

block content
  h1= title
  div(ng-app='ChatterApp', ng-controller='ChatterCtrl')
    label Name:
    input(type="text", ng-model="chatter.name", placeholder="Enter your name")
    input(type='text', ng-model='chatter.newMessage', placeholder='New Message')
    button(ng:click='addMessage()') Send

    div(ng-repeat='msg in chatter.messages') {{msg.text}}

    hr
    span Debug: chatter = {{chatter}}

    div
        h1 Source Files
        a(href="https://raw.github.com/ctarrington/JavaScriptSamples/master/TryAngular/Chatter/public/javascripts/chatter.js", target="_blank") chatter.js
        br
        a(href="https://raw.github.com/ctarrington/JavaScriptSamples/master/TryAngular/Chatter/views/chatter.jade", target="_blank") chatter.jade
        br

  script(src='/socket.io/socket.io.js')
  script(src='javascripts/chatter.js')